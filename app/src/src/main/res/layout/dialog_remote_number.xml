<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.ruffian.library.widget.RLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:background_normal="#F5F5F5"
        android:clickable="true"
        android:focusable="true"
        app:corner_radius_top_left="@dimen/dp_20"
        app:corner_radius_top_right="@dimen/dp_20">


        <ImageView
            android:id="@+id/closeIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:minWidth="@dimen/dp_50"
            android:minHeight="@dimen/dp_40"
            android:scaleType="centerInside"
            android:src="@drawable/close_w" />

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_m_15"
            android:text="@string/number"
            android:textStyle="bold"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_24" />


        <LinearLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <com.ruffian.library.widget.RTextView
                android:id="@+id/oneTV"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_25"
                android:clickable="true"
                android:gravity="center"
                android:text="1"
                 android:textColor="@color/colorFontGray"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                app:background_normal="@color/colorAccent"
                app:background_pressed="@color/colorPress"
                app:corner_radius="@dimen/dp_25" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/twoTV"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_25"
                android:clickable="true"
                android:gravity="center"
                android:text="2"
                
                 android:textColor="@color/colorFontGray"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                app:background_normal="@color/colorAccent"
                app:background_pressed="@color/colorPress"
                app:corner_radius="@dimen/dp_25" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/threeTV"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_25"
                android:clickable="true"
                android:gravity="center"
                android:text="3"
                
                 android:textColor="@color/colorFontGray"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                app:background_normal="@color/colorAccent"
                app:background_pressed="@color/colorPress"
                app:corner_radius="@dimen/dp_25" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <com.ruffian.library.widget.RTextView
                android:id="@+id/fourTV"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_25"
                android:clickable="true"
                android:gravity="center"
                android:text="4"
                
                 android:textColor="@color/colorFontGray"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                app:background_normal="@color/colorAccent"
                app:background_pressed="@color/colorPress"
                app:corner_radius="@dimen/dp_25" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/fiveTV"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_25"
                android:clickable="true"
                android:gravity="center"
                android:text="5"
                
                 android:textColor="@color/colorFontGray"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                app:background_normal="@color/colorAccent"
                app:background_pressed="@color/colorPress"
                app:corner_radius="@dimen/dp_25" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/sixTV"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_25"
                android:clickable="true"
                android:gravity="center"
                android:text="6"
                
                 android:textColor="@color/colorFontGray"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                app:background_normal="@color/colorAccent"
                app:background_pressed="@color/colorPress"
                app:corner_radius="@dimen/dp_25" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <com.ruffian.library.widget.RTextView
                android:id="@+id/sevenTV"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_25"
                android:clickable="true"
                android:gravity="center"
                android:text="7"
                
                 android:textColor="@color/colorFontGray"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                app:background_normal="@color/colorAccent"
                app:background_pressed="@color/colorPress"
                app:corner_radius="@dimen/dp_25" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/eightTV"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_25"
                android:clickable="true"
                android:gravity="center"
                android:text="8"
                
                 android:textColor="@color/colorFontGray"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                app:background_normal="@color/colorAccent"
                app:background_pressed="@color/colorPress"
                app:corner_radius="@dimen/dp_25" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/nineTV"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_25"
                android:clickable="true"
                android:gravity="center"
                android:text="9"
                
                 android:textColor="@color/colorFontGray"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                app:background_normal="@color/colorAccent"
                app:background_pressed="@color/colorPress"
                app:corner_radius="@dimen/dp_25" />
        </LinearLayout>

        <com.ruffian.library.widget.RTextView
            android:id="@+id/zeroTV"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_25"
            android:clickable="true"
            android:gravity="center"
            android:text="0"
             android:textColor="@color/colorFontGray"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            app:background_normal="@color/colorAccent"
            app:background_pressed="@color/colorPress"
            app:corner_radius="@dimen/dp_25" />

    </com.ruffian.library.widget.RLinearLayout>

</layout>