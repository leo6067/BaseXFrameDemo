<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme.  继承  重写覆盖 主题色 -->
    <style name="Theme.BaseDemo" parent="@style/AppTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <!--        <item name="colorSecondary">@color/color_FF03DAC5</item>-->
        <!--        <item name="colorSecondaryVariant">@color/color_FF018786</item>-->
        <item name="colorOnSecondary">@color/color_000000_80</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:screenOrientation">portrait</item>
        <!-- Customize your theme here. -->
    </style>




    <style name="Theme.Splash" parent="Theme.BaseDemo">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <!-- <item name="android:windowFullscreen">true</item>-->
        <!--        <item name="android:windowBackground">@drawable/bg_splash_bbspbz</item>-->
<!--        <item name="android:windowBackground">@drawable/splash</item>-->
        <!--        <item name="android:windowBackground">@drawable/splash_bg</item>-->
        <item name="android:screenOrientation">portrait</item>
    </style>

    <!--灰色阴影-->
    <style name="custom_dialog_style" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item><!--除去title-->
        <item name="android:backgroundDimEnabled">true</item><!--半透明-->
<!--        <item name="android:windowBackground">@color/transparent</item>&lt;!&ndash;除去背景色&ndash;&gt;-->
    </style>



    <color name="blue">#008AB8</color>
    <color name="orange">#FF765A</color>


    <declare-styleable name="SideBarView">
        <attr format="color|reference" name="sidebarSelectTextColor"/>
        <attr format="color|reference" name="sidebarUnSelectTextColor"/>
        <attr format="dimension" name="sidebarSelectTextSize"/>
        <attr format="dimension" name="sidebarUnSelectTextSize"/>

        <attr format="reference" name="sidebarWordBackground"/>
        <attr format="color|reference" name="sidebarWordTextColor"/>
        <attr format="dimension" name="sidebarWordTextSize"/>

        <attr format="boolean" name="is_auto_play"/>
        <attr format="integer" name="scroll_time"/>

    </declare-styleable>
</resources>