    <style name="Theme.BaseDemo" parent="@style/AppTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <!--        <item name="colorSecondary">@color/color_FF03DAC5</item>-->
        <!--        <item name="colorSecondaryVariant">@color/color_FF018786</item>-->
        <!--        <item name="colorOnSecondary">@color/color_000000_80</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/colorTheme</item>
        <item name="android:screenOrientation">portrait</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.Splash" parent="Theme.BaseDemo">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
