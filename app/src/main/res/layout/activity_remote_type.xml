<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.common.RemoteTypeActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTheme"
        android:focusableInTouchMode="true"
        android:orientation="vertical">


        <include
            android:id="@+id/titleLay"
            layout="@layout/include_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleLay"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp_6">


            <LinearLayout
                android:id="@+id/acLin"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_166"
                android:layout_weight="1"
                android:background="@drawable/item_device_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/icon_air" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AC"
                    android:textColor="#99000000"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/tvLin"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_166"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/item_device_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/icon_tv_tv" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TV"
                    android:textColor="#99000000"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</layout>