<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.cast.WifiReadyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/include_title"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/remote" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="@dimen/dp_80"
            android:text="Before we start, please make sure"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_22"
            android:textStyle="bold" />


        <TextView
            android:layout_marginTop="@dimen/dp_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="@dimen/dp_40"
            android:text="1. Turn on TV."
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_16"
            />


        <TextView
            android:layout_marginHorizontal="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="2. Connect to same Wi-Fi on your phone and TV."
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_16"
            />


        <TextView
            android:layout_marginHorizontal="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="3. Turn off the VPN on your phone if it's connected."
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_16"
            />


        <com.ruffian.library.widget.RTextView
            android:id="@+id/readTV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginHorizontal="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_30"
            android:gravity="center"
            android:onClick="onClick"
            android:text="READY"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            app:background_normal="#1C73FF"
            app:corner_radius="@dimen/dp_20" />



    </LinearLayout>

</layout>