<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.main.HomeFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/labelTV"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_56"
            android:layout_marginStart="@dimen/dp_20"
            android:gravity="center_vertical"
            android:text="@string/remote_control"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/addDevice"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_20"
            android:src="@drawable/icon_add_b"
            app:layout_constraintBottom_toBottomOf="@+id/labelTV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/labelTV" />


        <RelativeLayout
            android:id="@+id/adLin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/labelTV">


<!--            <com.google.android.gms.ads.AdView-->
<!--                android:id="@+id/adView"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center"-->
<!--                app:adSize="BANNER"-->
<!--                app:adUnitId="ca-app-pub-3940256099942544/6300978111" />-->


            <ImageView
                android:id="@+id/closeIV"
                android:layout_width="@dimen/dp_35"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:scaleType="centerInside"
                android:src="@drawable/icon_close_w" />

        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adLin" />


        <ImageView
            android:id="@+id/deviceIV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@drawable/icon_home_device_bg"
            app:layout_constraintTop_toBottomOf="@+id/adLin" />


        <TextView
            android:id="@+id/equipmentTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_28"
            android:text="@string/no_equipment"
            android:textColor="#ff9a9a9a"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/deviceIV"
            app:layout_constraintEnd_toEndOf="@+id/deviceIV"
            app:layout_constraintStart_toStartOf="@+id/deviceIV" />


        <com.ruffian.library.widget.RTextView
            android:id="@+id/addDeviceTV"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_70"
            android:layout_marginTop="@dimen/dp_28"
            android:drawableLeft="@drawable/icon_add_w"
            android:paddingHorizontal="@dimen/dp_29"
            android:paddingVertical="@dimen/dp_7"
            android:text="@string/add_remote"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            app:background_normal="@drawable/icon_home_add"
            app:corner_radius="@dimen/dp_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/deviceIV" />


        <RelativeLayout
            android:id="@+id/bottomLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent">


<!--            <com.google.android.gms.ads.AdView-->
<!--                android:id="@+id/bottomAdView"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center"-->
<!--                app:adSize="BANNER"-->
<!--                app:adUnitId="ca-app-pub-3940256099942544/6300978111" />-->


            <ImageView
                android:id="@+id/bottomCloseIV"
                android:layout_width="@dimen/dp_35"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:scaleType="centerInside"
                android:src="@drawable/icon_close_w" />

        </RelativeLayout>


        <include
            android:id="@+id/netInclude"
            layout="@layout/include_net"
            android:visibility="gone" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>