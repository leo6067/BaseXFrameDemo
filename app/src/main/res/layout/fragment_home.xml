<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.main.HomeFragment">



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.ruffian.library.widget.RLinearLayout
            android:id="@+id/top_lin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_20"
            app:background_normal="@drawable/way_lin_bg"
            app:layout_constraintTop_toTopOf="parent">


            <com.ruffian.library.widget.RTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cast_screen"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@string/cast_content_from_phone_to_your_tv"
                android:textColor="#ff999999"
                android:textSize="@dimen/sp_10" />


        </com.ruffian.library.widget.RLinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_40"
            android:background="@drawable/home_start"
            app:layout_constraintBottom_toBottomOf="@+id/top_lin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/top_lin" />


        <TextView
            android:id="@+id/deviceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:text="@string/devices"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/top_lin"
            app:layout_constraintTop_toBottomOf="@+id/top_lin" />


        <TextView
            android:id="@+id/deviceNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:textColor="#ffaaaaaa"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBaseline_toBaselineOf="@+id/deviceTitle"
            app:layout_constraintStart_toEndOf="@+id/deviceTitle"
            app:layout_constraintTop_toTopOf="@+id/deviceTitle" />


        <TextView
            android:id="@+id/addDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_20"
            android:text="@string/add_now"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingStart="@dimen/dp_19"
            android:background="@drawable/icon_addnew"
            app:layout_constraintBottom_toBottomOf="@+id/deviceNum"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/deviceNum" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"

            app:layout_constraintTop_toBottomOf="@+id/addDevice" />


        <LinearLayout
            app:layout_constraintTop_toBottomOf="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_45"
            android:orientation="horizontal">




            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                app:adSize="LARGE_BANNER"
                android:layout_marginBottom="@dimen/dp_45"
                app:adUnitId="ca-app-pub-3940256099942544/6300978111"/>



            <ImageView
                android:id="@+id/closeIV"
                android:layout_width="@dimen/dp_35"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/icon_close_w"
                />

        </LinearLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</layout>