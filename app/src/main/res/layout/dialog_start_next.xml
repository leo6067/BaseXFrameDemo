<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <com.ruffian.library.widget.RLinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:background_normal="#666666"
        app:corner_radius_top_left="@dimen/dp_20"
        app:corner_radius_top_right="@dimen/dp_20">


        <ImageView
            android:id="@+id/closeIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:minWidth="@dimen/dp_50"
            android:minHeight="@dimen/dp_50"
            android:scaleType="centerInside"
            android:src="@drawable/close_w" />


        <ImageView
            android:id="@+id/iconIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_22"
            android:minWidth="@dimen/dp_70"
            android:minHeight="@dimen/dp_70"
            android:scaleType="centerInside"
            android:src="@drawable/way_ir" />



        <TextView
            android:id="@+id/titleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_22"
            android:textStyle="bold" />

<!--            android:text="@string/your_phone_needs_to_have_a_n_built_in_ir_infrared_blaster"-->
        <TextView
            android:id="@+id/srcTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="#ffdddddd"
            android:text="@string/your_tv_and_phone_need_to_be"
            android:textSize="@dimen/sp_14" />


        <TextView
            android:id="@+id/srcTVB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/on_the_same_wifi_network"
            android:textColor="@color/white"
            android:textSize="14sp"
            />


        <com.ruffian.library.widget.RTextView
            android:id="@+id/startTV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginHorizontal="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_42"
            android:gravity="center"
            android:text="@string/start_now"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            app:background_normal="#1C73FF"
            app:corner_radius="@dimen/dp_20" />

    </com.ruffian.library.widget.RLinearLayout>

</layout>