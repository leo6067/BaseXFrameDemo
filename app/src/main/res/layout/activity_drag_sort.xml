<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.image.DragSortActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f3f3f3"
        android:orientation="vertical">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_weight="1"
            app:fastScrollEnabled="false" />


        <com.huxq17.handygridview.HandyGridView
            android:id="@+id/gridView"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:numColumns="2"
            android:paddingBottom="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp"
            android:scrollbars="vertical"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75"
            android:background="@color/white"
            android:gravity="center_vertical">


            <com.ruffian.library.widget.RTextView
                android:id="@+id/saveTV"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginHorizontal="@dimen/dp_28"
                android:gravity="center"
                android:text="@string/save_as_pdf"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                app:background_normal="#0B52FE"
                app:corner_radius="@dimen/dp_22" />

        </RelativeLayout>


    </LinearLayout>
</layout>