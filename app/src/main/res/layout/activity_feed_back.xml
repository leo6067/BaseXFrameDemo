<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.mine.FeedBackActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.ruffian.library.widget.REditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_210"
            app:background_normal="@color/white"
            app:corner_radius="@dimen/dp_12"
            android:hint="@string/please_enter_your_feedback_suggestions"
            android:gravity="top"
            android:padding="@dimen/dp_10"
            android:layout_margin="@dimen/dp_16"/>

        <com.ruffian.library.widget.REditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            app:background_normal="@color/white"
            app:corner_radius="@dimen/dp_12"
            android:textSize="@dimen/sp_14"
            android:paddingStart="@dimen/dp_10"
            android:hint="@string/please_enter_your_email_account"
            android:layout_margin="@dimen/dp_16"/>

        <com.ruffian.library.widget.RTextView
            android:id="@+id/positiveTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginVertical="@dimen/dp_30"
            android:gravity="center"
            android:paddingVertical="@dimen/dp_12"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            app:background_normal="#0B52FE"
            app:corner_radius="@dimen/dp_22" />



    </LinearLayout>

</layout>