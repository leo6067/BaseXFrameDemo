<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10">


    <com.ruffian.library.widget.RLinearLayout
        android:id="@+id/bgLin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        app:background_normal="@color/white"
        app:corner_radius="@dimen/dp_12"
        app:layout_constraintTop_toTopOf="parent" />


    <com.ruffian.library.widget.RImageView
        android:id="@+id/itemIconIv"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_pdf" />


    <TextView
        android:id="@+id/itemNameTV"
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:text="手机内部储存"
        android:textColor="#ff000000"
        android:ellipsize="end"
        android:lines="1"
        android:maxLength="20"
        android:maxLines="1"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toTopOf="@+id/itemSrcTV"
        app:layout_constraintStart_toEndOf="@+id/itemIconIv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />


    <TextView
        android:id="@+id/itemSrcTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_4"
        android:text="手机内部储存"
        android:textColor="#989898"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itemIconIv"
        app:layout_constraintTop_toBottomOf="@+id/itemNameTV" />


    <ImageView
        android:id="@+id/itemSelectIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_15"
        android:text=""
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>