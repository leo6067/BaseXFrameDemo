<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.main.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dp_20">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_20"
            android:text="@string/files"
            android:textColor="#ff212121"
            android:textSize="@dimen/sp_24"
            android:textStyle="bold" />


        <com.ruffian.library.widget.RTextView
            android:id="@+id/searchEdit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:drawableStart="@drawable/ic_search_gray"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:hint="@string/enter_file_name_search"
            android:paddingStart="@dimen/dp_12"
            android:textColor="#ff989898"
            android:textSize="14sp"
            app:background_normal="#F3F3F3"
            app:corner_radius="@dimen/dp_8" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_16"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/allTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all_files"
                android:textColor="#ff000000"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/collectTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_weight="1"
                android:text="收藏文件"
                android:textColor="#ff808080"
                android:textSize="@dimen/sp_18"
                android:visibility="invisible" />


            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/dp_16"
                android:layout_gravity="center_vertical"
                android:background="#D9D9D9" />


            <ImageView
                android:id="@+id/editIV"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_20"
                android:background="@drawable/ic_home_edit" />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="1" />

    </LinearLayout>

</layout>