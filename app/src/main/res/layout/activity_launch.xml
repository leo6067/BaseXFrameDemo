<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.login.LaunchActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/colorPrimary">




        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/remoteIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:background="@drawable/icon_launch_icon"

            />


        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/remoteIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="TV Remote Control"
            android:textColor="@color/colorFontBlack"
            android:textStyle="bold"
            android:textSize="@dimen/sp_20"
            />


        <ProgressBar
            android:id="@+id/progressView"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_8"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_60"
            android:indeterminate="true"
            android:indeterminateTint="@color/color_00A3FF"
            android:indeterminateTintMode="src_in"
            android:visibility="gone"
      />







    </RelativeLayout>


</layout>