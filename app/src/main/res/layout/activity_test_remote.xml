<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context=".ui.infrared.TestRemoteActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <include
            android:id="@+id/titleLay"
            layout="@layout/include_title" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_48"
            android:background="@drawable/icon_test_tv" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/tap_the_buttons_below_to_test_if_the_tv_responds_correctly"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            android:textStyle="bold" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20">

            <com.ruffian.library.widget.RTextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:background_normal="@color/colorLight"
                app:corner_radius="@dimen/dp_20"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/voiceIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:onClick="onClick"
                android:background="@drawable/icon_test_voice"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.ruffian.library.widget.RTextView
                android:id="@+id/controlTV"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginHorizontal="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_20"
                app:background_normal="#333333"
                app:corner_radius="@dimen/dp_25"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/voiceIV" />


            <ImageView
                android:id="@+id/leftIV"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:layout_margin="@dimen/dp_15"
                android:onClick="onClick"
                android:scaleType="centerInside"
                android:src="@drawable/icon_test_left"
                app:layout_constraintBottom_toBottomOf="@+id/controlTV"
                app:layout_constraintStart_toStartOf="@+id/controlTV"
                app:layout_constraintTop_toTopOf="@+id/controlTV" />


            <com.ruffian.library.widget.RTextView
                android:id="@+id/numberTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/5"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_18"
                app:layout_constraintBottom_toBottomOf="@+id/controlTV"
                app:layout_constraintEnd_toEndOf="@+id/controlTV"
                app:layout_constraintStart_toStartOf="@+id/controlTV"
                app:layout_constraintTop_toTopOf="@+id/controlTV"

                />


            <ImageView
                android:id="@+id/rightIV"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:layout_margin="@dimen/dp_15"
                android:onClick="onClick"
                android:scaleType="centerInside"
                android:src="@drawable/icon_test_right"
                app:layout_constraintBottom_toBottomOf="@+id/controlTV"
                app:layout_constraintEnd_toEndOf="@+id/controlTV"
                app:layout_constraintTop_toTopOf="@+id/controlTV" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/respondLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20">

            <com.ruffian.library.widget.RTextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:background_normal="#F5F5F5"
                app:corner_radius="@dimen/dp_20"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/hintTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/does_your_tv_respond"
                android:textColor="#ff333333"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/invalidTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:layout_marginVertical="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_85"
                android:background="@drawable/icon_test_useless"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hintTV" />


            <ImageView
                android:id="@+id/validTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:layout_marginVertical="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_85"
                android:background="@drawable/icon_test_use"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hintTV" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</layout>