<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/rootLay"
    android:layout_height="@dimen/dp_56"
    android:layout_marginHorizontal="@dimen/dp_20"
    android:layout_marginBottom="@dimen/dp_12"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    app:background_normal="@color/colorPrimary"
    app:corner_radius="@dimen/dp_8">


    <ImageView
        android:id="@+id/itemIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_11"
        android:background="@drawable/icon_brand" />

    <TextView
        android:id="@+id/itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_11"
        android:textColor="@color/colorFontGray"
        android:textSize="@dimen/sp_16"

        />

</com.ruffian.library.widget.RLinearLayout>