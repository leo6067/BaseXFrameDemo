<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.image.DealImageActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAFAFB"
        android:orientation="vertical">


        <!-- Image Cropper fill the remaining available height -->
        <com.theartofdev.edmodo.cropper.CropImageView xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cropImageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            custom:cropBorderCornerColor="#0B52FE" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="左" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:text="2/3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="右" />


        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_130"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/dp_15">


            <TextView
                android:id="@+id/rotateTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/select_img_rotate"
                android:gravity="center"
                android:text="旋转"
                android:textColor="@color/select_img_text" />


            <CheckBox
                android:id="@+id/cropTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawableTop="@drawable/select_img_crop"
                android:gravity="center"
                android:text="剪裁" />

            <TextView
                android:id="@+id/deleteTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/select_img_delete"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/select_img_text" />


            <com.ruffian.library.widget.RTextView
                android:id="@+id/finishTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:paddingHorizontal="@dimen/dp_25"
                android:paddingVertical="@dimen/dp_6"
                android:text="完成"
                android:textColor="#ffffffff"
                android:textSize="15sp"
                app:background_normal="#0B52FE"
                app:corner_radius="@dimen/dp_22" />


            <com.ruffian.library.widget.RTextView
                android:id="@+id/positiveTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:paddingHorizontal="@dimen/dp_25"
                android:paddingVertical="@dimen/dp_6"
                android:text="确定"
                android:textColor="#ffffffff"
                android:textSize="15sp"
                android:visibility="gone"
                app:background_normal="#0B52FE"
                app:corner_radius="@dimen/dp_22" />

        </LinearLayout>


    </LinearLayout>


</layout>