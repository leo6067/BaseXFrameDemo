<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.image.DealImageActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAFAFB"
        android:orientation="vertical">


        <!-- Image Cropper fill the remaining available height -->
        <com.theartofdev.edmodo.cropper.CropImageView
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/cropImageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:cropBorderCornerColor="#0B52FE" />

        <ImageView
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.ruffian.library.widget.RLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp_12"
            android:paddingVertical="@dimen/dp_6"
            app:background_normal="@color/white"
            app:corner_radius="@dimen/dp_16">


            <ImageView
                android:id="@+id/leftIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_img_left_a" />

            <TextView
                android:id="@+id/numberTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_12"
                android:textColor="#464646"
                android:textSize="@dimen/sp_16" />


            <ImageView
                android:id="@+id/rightIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_img_right_a" />


        </com.ruffian.library.widget.RLinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/white" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/rotateTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/select_img_rotate"
                android:gravity="center"
                android:text="@string/rotate"
                android:textColor="@color/select_edit_text" />


            <CheckBox
                android:id="@+id/cropTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:drawableTop="@drawable/select_img_crop"
                android:gravity="center"
                android:text="@string/crop"
                android:textColor="@color/select_img_or_text_check" />

            <TextView
                android:id="@+id/deleteTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/select_img_delete"
                android:gravity="center"
                android:text="@string/delete"
                android:textColor="@color/select_edit_text" />


            <com.ruffian.library.widget.RTextView
                android:id="@+id/finishTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:paddingHorizontal="@dimen/dp_25"
                android:paddingVertical="@dimen/dp_6"
                android:text="@string/complete"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:background_normal="#0B52FE"
                app:corner_radius="@dimen/dp_22" />


            <com.ruffian.library.widget.RTextView
                android:id="@+id/positiveTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:paddingHorizontal="@dimen/dp_25"
                android:paddingVertical="@dimen/dp_6"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:visibility="gone"
                app:background_normal="#0B52FE"
                app:corner_radius="@dimen/dp_22" />

        </LinearLayout>


    </LinearLayout>


</layout>