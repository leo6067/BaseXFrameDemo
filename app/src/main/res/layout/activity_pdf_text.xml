<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context=".ui.image.PdfTextActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:drawableStart="@drawable/icon_edit"
            android:drawablePadding="@dimen/dp_10"
            android:text="@string/click_the_text_to_edit_it"
            android:textColor="#fff8a155"
            android:textSize="@dimen/sp_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textEmsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_16"

            android:textColor="#ffb7b7b7"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />






        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_height="0dp"

            android:layout_marginHorizontal="@dimen/dp_16"
            app:layout_constraintBottom_toTopOf="@+id/orderLin"
            app:layout_constraintTop_toBottomOf="@+id/textEmsTV" />

        <com.ruffian.library.widget.RLinearLayout
            android:id="@+id/orderLin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp_12"
            android:paddingVertical="@dimen/dp_6"
            app:background_normal="@color/white"
            app:corner_radius="@dimen/dp_16"
            app:layout_constraintBottom_toTopOf="@+id/copyLin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <ImageView
                android:id="@+id/leftIV"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:scaleType="centerInside"
                android:src="@drawable/icon_img_left_a" />

            <TextView
                android:id="@+id/numberTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_12"
                android:textColor="#464646"
                android:textSize="@dimen/sp_16" />


            <ImageView
                android:id="@+id/rightIV"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:scaleType="centerInside"
                android:src="@drawable/icon_img_right_a" />


        </com.ruffian.library.widget.RLinearLayout>


        <LinearLayout
            android:id="@+id/copyLin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_20"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent">


            <com.ruffian.library.widget.RTextView
                android:id="@+id/pageTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_8"
                android:text="@string/copy_current_page_text"
                android:paddingStart="@dimen/dp_5"
                android:drawablePadding="@dimen/dp_m_10"
                android:drawableStart="@drawable/icon_copy_a"
                android:textColor="#ff0b52fe"
                android:textSize="@dimen/sp_12"
                app:background_normal="#120B52FE"
                app:corner_radius="@dimen/dp_22" />


            <com.ruffian.library.widget.RTextView
                android:id="@+id/allV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_8"
                android:text="@string/copy_all_page_text"
                android:paddingStart="@dimen/dp_8"
                android:drawablePadding="@dimen/dp_m_10"
                android:drawableStart="@drawable/icon_copy_b"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                app:background_normal="#0B52FE"
                app:corner_radius="@dimen/dp_22" />


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>