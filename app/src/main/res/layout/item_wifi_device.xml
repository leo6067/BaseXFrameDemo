<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_20"
    android:layout_marginTop="@dimen/dp_15"
    android:gravity="center_vertical"
    android:minHeight="@dimen/dp_60"
    android:orientation="horizontal"
    app:background_normal="@color/colorLight"
    app:corner_radius="@dimen/dp_30">


    <ImageView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_22"
        android:layout_marginStart="@dimen/dp_20"
        android:background="@drawable/icon_save_tv_blue" />

    <TextView
        android:id="@+id/itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:text="客厅的小米电视"
        android:textColor="#DDDDDD"
        android:textSize="@dimen/sp_16"

        />


</com.ruffian.library.widget.RLinearLayout>