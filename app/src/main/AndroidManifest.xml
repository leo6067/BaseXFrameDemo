<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.xy.demo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" /> <!-- 红外遥控 -->
    <uses-permission android:name="android.permission.TRANSMIT_IR" /> <!-- 是否仅在支持红外的设备上运行 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" /> <!-- 屏幕镜像和远程摄像头所需 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.CAMERA" />


    <uses-feature
        android:name="android.hardware.ConsumerIrManager"
        android:required="false" />

    <application
        android:name=".base.MyApplication"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_logo_round"
        android:supportsRtl="true"

        android:requestLegacyExternalStorage="true"
        android:theme="@style/Theme.BaseDemo"
        android:usesCleartextTraffic="true">

        <meta-data android:name="ScopedStorage" android:value="true" />
        <activity
            android:name=".ui.cast.SearchWifiActivity"
            android:exported="false" />
        <activity
            android:name=".ui.cast.WifiReadyActivity"
            android:exported="false" /> <!-- Sample AdMob app ID: ca-app-pub-3940256099942544~3347511713 -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713" />

        <activity
            android:name=".ui.login.LaunchActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.setting.FeedBackActivity"
            android:exported="false" />
        <activity
            android:name=".ui.setting.PrivacyActivity"
            android:exported="false" />
        <activity
            android:name=".ui.setting.SettingActivity"
            android:exported="false" />
        <activity
            android:name=".ui.infrared.SaveRemoteActivity"
            android:exported="false" />
        <activity
            android:name=".ui.infrared.TestRemoteActivity"
            android:exported="false" />
        <activity
            android:name=".ui.infrared.TurnOnActivity"
            android:exported="false" />
        <activity
            android:name=".ui.infrared.ReadyActivity"
            android:exported="false" />
        <activity
            android:name=".ui.infrared.BrandActivity"
            android:exported="false" />
        <activity
            android:name=".ui.infrared.AddWayActivity"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".ui.setting.LanguageActivity"
            android:exported="false" />
        <activity
            android:name=".ui.infrared.TVConActivity"
            android:exported="false" />
        <activity
            android:name=".TestActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SecondActivity"
            android:exported="false" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.main.MainActivity"
            android:configChanges="orientation|uiMode|screenSize|navigation|locale|mcc|mnc|screenLayout|density"
            android:exported="false"
            android:screenOrientation="portrait" />




        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.xy.demo.base.FileProvide"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider" />
        </provider>
    </application>

</manifest>